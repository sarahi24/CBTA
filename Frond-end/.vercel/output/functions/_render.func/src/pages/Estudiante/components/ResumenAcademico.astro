---
const {
  periodo,
  totalPagado,
  totalPendiente
} = Astro.props;
---

<div class="summary-card">
  <h3 class="summary-title">
    Resumen Acad√©mico {periodo}
  </h3>

  <div class="summary-row">
    <span>Total Pagado</span>
    <span class="val-ok">{totalPagado}</span>
  </div>

  <div class="summary-row no-border">
    <span>Total Pendiente</span>
    <span class="val-alert">{totalPendiente}</span>
  </div>
</div>

<style>
:global(.summary-card) {
  background: white;
  border: 1px solid #f3f4f6;
  padding: 2rem;
  border-radius: 1.5rem;
  box-shadow: 0 1px 2px rgba(0,0,0,0.05);
}

:global(.summary-title) {
  color: #1a4d4e;
  font-weight: 700;
  margin-bottom: 1.5rem;
}

:global(.summary-row) {
  display: flex;
  justify-content: space-between;
  padding: 1rem 0;
  border-bottom: 1px solid #f9fafb;
  color: #9ca3af;
}

:global(.summary-row.no-border) {
  border-bottom: none;
}

:global(.val-ok) {
  color: #1a4d4e;
  font-weight: 900;
}

:global(.val-alert) {
  color: #dc2626;
  font-weight: 900;
}
</style>
