---
import Layout from '../layouts/Layout.astro';
import { API_ENDPOINTS } from '../config/api.js';

let initialUsers = [];
try {
  const res = await fetch(API_ENDPOINTS.users.list);
  if (res.ok) {
    const json = await res.json();
    initialUsers = Array.isArray(json) ? json : (Array.isArray(json.data) ? json.data : []);
  }
} catch (e) {
  initialUsers = [
    { 
      id: 100, name: 'Juan', last_name: 'Pérez López', email: 'juan.perez@cbta71.edu.mx', 
      phone_number: '5512345678', birthdate: '2000-05-12', gender: 'hombre', 
      curp: 'PELJ000512HDFRPN09', address: ['Calle Hidalgo #123', 'Col. Centro', 'CDMX'], 
      blood_type: 'O+', registration_date: '2025-01-01', status: 'activo', role: 'Administrador' 
    }
  ];
}

const usersJSON = JSON.stringify(initialUsers);
const API_BASE_URL = 'https://nginx-production-728f.up.railway.app/api';
---

<Layout title="Gestión de Personal | CBTA 71">
    <script is:inline src="/js/xlsx.min.js"></script>
    
    <style is:global>
        [x-cloak] { display: none !important; }
        .bg-institucional { background-color: #2E594D; }
        .text-institucional { color: #2E594D; }
        .input-institucional:focus { border-color: #2E594D; ring: 2px #2E594D; }
        /* Scrollbar estética para el modal */
        .custom-scroll::-webkit-scrollbar { width: 6px; }
        .custom-scroll::-webkit-scrollbar-track { background: #f1f1f1; }
        .custom-scroll::-webkit-scrollbar-thumb { background: #2E594D; border-radius: 10px; }
    </style>

    <div x-data={`userManagement(${usersJSON}, '${API_BASE_URL}')`} x-cloak class="min-h-screen bg-gray-100 pb-10">
        
        <div class="bg-white border-b sticky top-0 z-40 shadow-sm">
            <div class="max-w-7xl mx-auto px-4 py-4 flex flex-col md:row justify-between items-center gap-4">
                <div class="flex items-center gap-4">
                    <div class="bg-institucional p-2 rounded-lg text-white">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
                    </div>
                    <div>
                        <h1 class="text-xl font-bold text-gray-800 leading-none">Gestión de Personal</h1>
                        <span class="text-xs text-gray-500 font-medium uppercase tracking-tighter">CBTA 71 - Dashboard de Administración</span>
                    </div>
                </div>

                <div class="relative w-full md:w-96">
                    <input type="text" x-model="searchQuery" placeholder="Buscar por nombre, CURP o correo..." 
                           class="w-full pl-11 pr-4 py-2.5 rounded-2xl border-2 border-gray-100 bg-gray-50 focus:bg-white focus:border-institucional outline-none transition-all text-sm">
                    <svg class="w-5 h-5 absolute left-4 top-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
                </div>

                <div class="flex gap-2 w-full md:w-auto">
                    <button @click="downloadTemplate()" class="flex-1 md:flex-none px-4 py-2 bg-white border-2 border-gray-100 rounded-xl hover:bg-gray-50 font-bold text-xs flex items-center justify-center gap-2 transition-all">
                        <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/></svg>
                        PLANTILLA
                    </button>
                    <button @click="openPanelForAdd()" class="flex-1 md:flex-none px-6 py-2.5 bg-institucional text-white rounded-xl font-bold text-sm shadow-lg hover:shadow-xl transform active:scale-95 transition-all flex items-center justify-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M12 4v16m8-8H4"/></svg>
                        NUEVO REGISTRO
                    </button>
                </div>
            </div>
        </div>

        <div class="max-w-7xl mx-auto px-4 py-8">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                <template x-for="user in filteredUsers()" :key="user.id">
                    <div class="bg-white rounded-3xl border border-gray-200 shadow-sm hover:shadow-2xl transition-all duration-500 overflow-hidden flex flex-col group">
                        <div class="px-5 pt-5 flex justify-between items-center">
                            <span :class="user.status === 'activo' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700'" 
                                  class="px-3 py-1 rounded-full text-[9px] font-black uppercase tracking-widest" x-text="user.status"></span>
                            <span class="text-[10px] text-gray-400 font-bold" x-text="'ID: #'+user.id"></span>
                        </div>

                        <div class="p-5 flex-1">
                            <div class="flex items-center gap-4 mb-4">
                                <div class="h-14 w-14 bg-institucional rounded-2xl flex items-center justify-center text-white font-bold text-2xl shadow-inner" x-text="user.name[0]"></div>
                                <div>
                                    <h3 class="font-bold text-gray-900 leading-tight text-lg group-hover:text-institucional transition-colors" x-text="user.name"></h3>
                                    <p class="text-sm font-bold text-gray-400" x-text="user.last_name"></p>
                                </div>
                            </div>

                            <div class="space-y-3 pt-4 border-t border-dashed">
                                <div class="flex flex-col">
                                    <span class="text-[9px] font-black text-gray-400 uppercase tracking-widest">Correo</span>
                                    <span class="text-xs font-semibold text-gray-700 truncate" x-text="user.email"></span>
                                </div>
                                <div class="flex justify-between">
                                    <div class="flex flex-col">
                                        <span class="text-[9px] font-black text-gray-400 uppercase tracking-widest">Rol</span>
                                        <span class="text-xs font-bold text-institucional" x-text="user.role"></span>
                                    </div>
                                    <div class="flex flex-col text-right">
                                        <span class="text-[9px] font-black text-gray-400 uppercase tracking-widest">Sangre</span>
                                        <span class="text-xs font-bold text-red-600" x-text="user.blood_type"></span>
                                    </div>
                                </div>
                                <div class="flex flex-col">
                                    <span class="text-[9px] font-black text-gray-400 uppercase tracking-widest">CURP</span>
                                    <span class="text-xs font-mono text-gray-600" x-text="user.curp || 'NO REGISTRADO'"></span>
                                </div>
                            </div>
                        </div>

                        <div class="bg-gray-50 px-5 py-4 flex gap-3">
                            <button @click="openPanelForEdit(user)" class="flex-1 bg-white border border-gray-200 py-2 rounded-xl text-blue-600 hover:bg-blue-600 hover:text-white transition-all flex items-center justify-center gap-2 text-xs font-bold">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/></svg>
                                EDITAR
                            </button>
                            <button @click="confirmDeleteUser(user)" class="p-2 border border-gray-200 rounded-xl text-red-500 hover:bg-red-500 hover:text-white transition-all">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
                            </button>
                        </div>
                    </div>
                </template>
            </div>
        </div>

        <div x-show="isPanelOpen" class="fixed inset-0 z-50 overflow-y-auto" style="display: none;">
            <div class="flex items-center justify-center min-h-screen p-4">
                <div x-show="isPanelOpen" x-transition:enter="ease-out duration-300" x-transition:enter-start="opacity-0 scale-95" 
                     class="bg-white rounded-[2.5rem] shadow-2xl w-full max-w-4xl overflow-hidden relative z-50 flex flex-col md:flex-row">
                    
                    <div class="bg-institucional md:w-1/3 p-10 text-white flex flex-col justify-between">
                        <div>
                            <div class="h-16 w-16 bg-white/20 rounded-2xl flex items-center justify-center mb-6">
                                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
                            </div>
                            <h2 class="text-3xl font-black leading-tight" x-text="isEditing ? 'Actualizar Datos' : 'Registrar Nuevo'"></h2>
                            <p class="mt-4 text-white/60 text-sm">Asegúrate de que el CURP y el correo institucional sean correctos para evitar duplicados.</p>
                        </div>
                        <div class="hidden md:block">
                            <span class="text-[10px] font-bold tracking-widest opacity-40 uppercase">CBTA 71 © 2025</span>
                        </div>
                    </div>

                    <form @submit.prevent="saveUser()" class="flex-1 p-8 md:p-12 custom-scroll overflow-y-auto max-h-[85vh]">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div class="md:col-span-2 border-b pb-2 mb-2"><span class="text-xs font-black text-institucional uppercase tracking-widest">Información Personal</span></div>
                            <div class="space-y-1">
                                <label class="text-[10px] font-bold text-gray-400 uppercase ml-1 tracking-widest">Nombre(s)</label>
                                <input type="text" x-model="newUser.name" required class="w-full px-4 py-3 rounded-2xl border-2 border-gray-50 bg-gray-50 focus:bg-white focus:border-institucional outline-none transition-all">
                            </div>
                            <div class="space-y-1">
                                <label class="text-[10px] font-bold text-gray-400 uppercase ml-1 tracking-widest">Apellidos</label>
                                <input type="text" x-model="newUser.last_name" required class="w-full px-4 py-3 rounded-2xl border-2 border-gray-50 bg-gray-50 focus:bg-white focus:border-institucional outline-none transition-all">
                            </div>
                            <div class="space-y-1">
                                <label class="text-[10px] font-bold text-gray-400 uppercase ml-1 tracking-widest">CURP</label>
                                <input type="text" x-model="newUser.curp" maxlength="18" class="w-full px-4 py-3 rounded-2xl border-2 border-gray-50 bg-gray-50 focus:bg-white focus:border-institucional outline-none transition-all font-mono uppercase">
                            </div>
                            <div class="space-y-1">
                                <label class="text-[10px] font-bold text-gray-400 uppercase ml-1 tracking-widest">Fecha Nac.</label>
                                <input type="date" x-model="newUser.birthdate" class="w-full px-4 py-3 rounded-2xl border-2 border-gray-50 bg-gray-50 focus:bg-white focus:border-institucional outline-none transition-all">
                            </div>

                            <div class="md:col-span-2 border-b pb-2 mb-2 mt-4"><span class="text-xs font-black text-institucional uppercase tracking-widest">Contacto y Sistema</span></div>
                            <div class="md:col-span-2 space-y-1">
                                <label class="text-[10px] font-bold text-gray-400 uppercase ml-1 tracking-widest">Email Institucional</label>
                                <input type="email" x-model="newUser.email" required class="w-full px-4 py-3 rounded-2xl border-2 border-gray-50 bg-gray-50 focus:bg-white focus:border-institucional outline-none transition-all">
                            </div>
                            <div class="space-y-1">
                                <label class="text-[10px] font-bold text-gray-400 uppercase ml-1 tracking-widest">Rol</label>
                                <select x-model="newUser.role" class="w-full px-4 py-3 rounded-2xl border-2 border-gray-50 bg-gray-50 focus:border-institucional outline-none transition-all font-bold">
                                    <option value="Administrador">Administrador</option>
                                    <option value="Maestro">Maestro</option>
                                    <option value="Caja">Caja</option>
                                </select>
                            </div>
                            <div class="space-y-1">
                                <label class="text-[10px] font-bold text-gray-400 uppercase ml-1 tracking-widest">Estatus</label>
                                <select x-model="newUser.status" class="w-full px-4 py-3 rounded-2xl border-2 border-gray-50 bg-gray-50 focus:border-institucional outline-none transition-all">
                                    <option value="activo">Activo</option>
                                    <option value="inactivo">Inactivo</option>
                                </select>
                            </div>

                            <div class="md:col-span-2 border-b pb-2 mb-2 mt-4"><span class="text-xs font-black text-institucional uppercase tracking-widest">Dirección</span></div>
                            <div class="md:col-span-2 grid grid-cols-1 md:grid-cols-3 gap-4">
                                <input type="text" x-model="newUser.address[0]" placeholder="Calle y número" class="px-4 py-3 rounded-2xl border-2 border-gray-50 bg-gray-50 focus:border-institucional outline-none transition-all text-sm">
                                <input type="text" x-model="newUser.address[1]" placeholder="Colonia" class="px-4 py-3 rounded-2xl border-2 border-gray-50 bg-gray-50 focus:border-institucional outline-none transition-all text-sm">
                                <input type="text" x-model="newUser.address[2]" placeholder="Estado" class="px-4 py-3 rounded-2xl border-2 border-gray-50 bg-gray-50 focus:border-institucional outline-none transition-all text-sm">
                            </div>
                        </div>

                        <div class="mt-12 flex gap-4">
                            <button type="button" @click="closePanel()" class="flex-1 px-8 py-4 rounded-2xl font-black text-gray-400 hover:bg-gray-100 transition-all uppercase tracking-widest">Cerrar</button>
                            <button type="submit" class="flex-[2] px-8 py-4 bg-institucional text-white rounded-2xl font-black shadow-xl hover:shadow-2xl hover:-translate-y-1 active:translate-y-0 transition-all flex items-center justify-center gap-3 uppercase tracking-widest" :disabled="isSaving">
                                <template x-if="isSaving">
                                    <div class="animate-spin h-5 w-5 border-3 border-white border-t-transparent rounded-full"></div>
                                </template>
                                <span x-text="isSaving ? 'Procesando...' : 'Guardar Cambios'"></span>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="fixed inset-0 bg-gray-900/80 backdrop-blur-md transition-opacity" @click="closePanel()"></div>
            </div>
        </div>
    </div>

    <script is:inline define:vars={{ usersJSON, API_BASE_URL }}>
        document.addEventListener('alpine:init', () => {
            Alpine.data('userManagement', (initialUsers, baseUrl) => ({
                users: initialUsers,
                apiBaseUrl: baseUrl,
                isPanelOpen: false,
                isEditing: false,
                isSaving: false,
                searchQuery: '',
                newUser: { address: ['', '', ''] }, // Inicialización para evitar errores de undefined
                notification: { show: false, message: '', type: 'success' },

                // LÓGICA DE BÚSQUEDA INTEGRAL
                filteredUsers() {
                    if (!this.searchQuery) return this.users;
                    const q = this.searchQuery.toLowerCase();
                    return this.users.filter(u => 
                        (u.name + ' ' + u.last_name).toLowerCase().includes(q) || 
                        u.email.toLowerCase().includes(q) || 
                        (u.curp && u.curp.toLowerCase().includes(q)) ||
                        u.role.toLowerCase().includes(q)
                    );
                },

                // LÓGICA DE PANEL (Reset de todas las variables originales)
                openPanelForAdd() {
                    this.isEditing = false;
                    this.newUser = { 
                        id: null, name: '', last_name: '', email: '', phone_number: '',
                        birthdate: '', gender: 'hombre', curp: '', 
                        address: ['', '', ''], // Mantenemos tu lógica de array
                        blood_type: 'O+', registration_date: new Date().toISOString().split('T')[0],
                        status: 'activo', role: 'Maestro' 
                    };
                    this.isPanelOpen = true;
                },

                openPanelForEdit(user) {
                    this.isEditing = true;
                    // Clon profundo para no modificar la lista si se cancela
                    this.newUser = JSON.parse(JSON.stringify(user));
                    // Asegurar que address exista como array
                    if (!this.newUser.address) this.newUser.address = ['', '', ''];
                    this.isPanelOpen = true;
                },

                closePanel() { this.isPanelOpen = false; },

                // LÓGICA DE GUARDADO (Toda tu lógica de peticiones)
                async saveUser() {
                    // 1. Validaciones lógicas manuales (las que suelen sumar líneas)
                    if (this.newUser.curp && this.newUser.curp.length !== 18) {
                        this.showNotify('El CURP debe tener 18 caracteres', 'error');
                        return;
                    }

                    this.isSaving = true;
                    try {
                        const method = this.isEditing ? 'PUT' : 'POST';
                        const url = this.isEditing 
                            ? `${this.apiBaseUrl}/users/${this.newUser.id}` 
                            : `${this.apiBaseUrl}/users`;

                        const response = await fetch(url, {
                            method,
                            headers: { 
                                'Content-Type': 'application/json',
                                'Accept': 'application/json' 
                            },
                            body: JSON.stringify(this.newUser)
                        });

                        const result = await response.json();

                        if (response.ok && (result.success || result.id)) {
                            // Mantenemos tu lógica de actualización de lista local
                            const savedData = result.data?.user || result.data || result;
                            if (this.isEditing) {
                                const idx = this.users.findIndex(u => u.id === this.newUser.id);
                                if (idx !== -1) this.users[idx] = savedData;
                            } else {
                                this.users.push(savedData);
                            }
                            this.showNotify(result.message || 'Registro procesado con éxito');
                            this.closePanel();
                        } else {
                            // Manejo detallado de errores de API
                            let msg = result.message || 'Error en la operación';
                            if (result.errors) msg = Object.values(result.errors).flat().join(' | ');
                            this.showNotify(msg, 'error');
                        }
                    } catch (error) {
                        this.showNotify('Fallo de conexión: ' + error.message, 'error');
                    } finally {
                        this.isSaving = false;
                    }
                },

                // LÓGICA DE BORRADO
                confirmDeleteUser(user) {
                    if (confirm(`¿Está seguro de eliminar a ${user.name} ${user.last_name}?\nEsta acción no se puede deshacer.`)) {
                        this.deleteUser(user.id);
                    }
                },

                async deleteUser(id) {
                    try {
                        const response = await fetch(`${this.apiBaseUrl}/users/${id}`, { 
                            method: 'DELETE',
                            headers: { 'Accept': 'application/json' }
                        });
                        const result = await response.json();
                        if (response.ok && result.success) {
                            this.users = this.users.filter(u => u.id !== id);
                            this.showNotify('Usuario eliminado correctamente');
                        } else {
                            this.showNotify(result.message || 'No se pudo eliminar', 'error');
                        }
                    } catch (e) {
                        this.showNotify('Error de red al eliminar', 'error');
                    }
                },

                // LÓGICA DE EXCEL (XLSX)
                downloadTemplate() {
                    const template = [
                        { 
                            name: 'Nombre', 
                            last_name: 'Apellidos', 
                            email: 'correo@cbta71.edu.mx', 
                            curp: 'ABC123456...',
                            role: 'Maestro',
                            phone_number: '1234567890'
                        }
                    ];
                    const ws = XLSX.utils.json_to_sheet(template);
                    const wb = XLSX.utils.book_new();
                    XLSX.utils.book_append_sheet(wb, ws, 'Plantilla');
                    XLSX.writeFile(wb, 'Plantilla_Personal_CBTA71.xlsx');
                },

                showNotify(msg, type = 'success') {
                    this.notification = { show: true, message: msg, type };
                    setTimeout(() => this.notification.show = false, 4000);
                }
            }));
        });
    </script>