---
import Layout from '../layouts/Layout.astro';
import { API_ENDPOINTS } from '../config/api.js';

// Lógica de carga inicial con los headers de seguridad detectados en tu API
let initialUsers = [];
try {
  const res = await fetch(API_ENDPOINTS.users.list, {
    headers: {
      'X-User-Role': 'admin',
      'X-User-Permission': 'view.student',
      'Accept': 'application/json'
    }
  });
  if (res.ok) {
    const json = await res.json();
    initialUsers = Array.isArray(json) ? json : (Array.isArray(json.data) ? json.data : []);
  }
} catch (e) {
  // Fallback de datos para desarrollo
  initialUsers = [
    { id: 1, name: 'Usuario', last_name: 'de Prueba', email: 'test@cbta71.edu.mx', role: 'Administrador', status: 'activo', curp: 'CURP1234567890', address: ['','',''], blood_type: 'O+' }
  ];
}

const usersJSON = JSON.stringify(initialUsers);
const API_BASE_URL = 'https://nginx-production-728f.up.railway.app/api';
---

<Layout title="Gestión de Personal | CBTA 71">
    <script is:inline src="/js/xlsx.min.js"></script>
    
    <style is:global>
        [x-cloak] { display: none !important; }
        .bg-institucional { background-color: #2E594D; }
        .text-institucional { color: #2E594D; }
        .border-institucional { border-color: #2E594D; }
        
        /* Animación suave para las cards */
        .card-user { transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); }
        .card-user:hover { transform: translateY(-5px); }
    </style>

    <div x-data={`userManagement(${usersJSON}, '${API_BASE_URL}')`} x-cloak class="min-h-screen bg-[#f8fafc]">
        
        <div class="max-w-7xl mx-auto px-4 pt-8">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <div class="bg-white p-6 rounded-3xl shadow-sm border border-gray-100 flex items-center gap-5">
                    <div class="p-4 bg-blue-50 text-blue-600 rounded-2xl">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
                    </div>
                    <div>
                        <p class="text-sm font-bold text-gray-400 uppercase tracking-widest">Total Usuarios</p>
                        <h2 class="text-3xl font-black text-gray-800" x-text="users.length"></h2>
                    </div>
                </div>
                <div class="bg-white p-6 rounded-3xl shadow-sm border border-gray-100 flex items-center gap-5">
                    <div class="p-4 bg-green-50 text-green-600 rounded-2xl">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                    </div>
                    <div>
                        <p class="text-sm font-bold text-gray-400 uppercase tracking-widest">Activos</p>
                        <h2 class="text-3xl font-black text-gray-800" x-text="users.filter(u => u.status === 'activo').length"></h2>
                    </div>
                </div>
                <div class="bg-white p-6 rounded-3xl shadow-sm border border-gray-100 flex items-center gap-5">
                    <div class="p-4 bg-institucional bg-opacity-10 text-institucional rounded-2xl">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
                    </div>
                    <div>
                        <p class="text-sm font-bold text-gray-400 uppercase tracking-widest">Administradores</p>
                        <h2 class="text-3xl font-black text-gray-800" x-text="users.filter(u => u.role === 'Administrador').length"></h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="max-w-7xl mx-auto px-4 mb-8 sticky top-4 z-30">
            <div class="bg-white/80 backdrop-blur-md p-4 rounded-[2rem] shadow-lg border border-white flex flex-col md:flex-row justify-between items-center gap-4">
                <div class="relative w-full md:w-1/3">
                    <input type="text" x-model="searchQuery" placeholder="Buscar por nombre, correo o CURP..." 
                           class="w-full pl-12 pr-4 py-3 rounded-2xl border-none bg-gray-100 focus:ring-2 focus:ring-institucional transition-all outline-none text-sm">
                    <svg class="w-5 h-5 absolute left-4 top-3.5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
                </div>
                <div class="flex gap-3 w-full md:w-auto">
                    <button @click="downloadTemplate()" class="flex-1 md:flex-none px-6 py-3 bg-white border border-gray-200 rounded-2xl font-bold text-xs text-gray-600 hover:bg-gray-50 transition-all flex items-center justify-center gap-2">
                        <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/></svg>
                        EXCEL
                    </button>
                    <button @click="openPanelForAdd()" class="flex-1 md:flex-none px-8 py-3 bg-institucional text-white rounded-2xl font-bold text-sm shadow-xl hover:shadow-institucional/40 transition-all flex items-center justify-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M12 4v16m8-8H4"/></svg>
                        NUEVO USUARIO
                    </button>
                </div>
            </div>
        </div>

        <div class="max-w-7xl mx-auto px-4 pb-20">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                <template x-for="user in filteredUsers()" :key="user.id">
                    <div class="card-user bg-white rounded-[2.5rem] border border-gray-100 shadow-sm overflow-hidden flex flex-col">
                        <div class="p-6 flex-1">
                            <div class="flex justify-between items-start mb-6">
                                <div class="h-16 w-16 bg-gray-50 rounded-[1.5rem] flex items-center justify-center text-institucional font-black text-2xl shadow-inner border border-gray-100" x-text="user.name[0]"></div>
                                <div :class="user.status === 'activo' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700'" 
                                     class="px-4 py-1 rounded-full text-[10px] font-black uppercase tracking-tighter" x-text="user.status"></div>
                            </div>
                            
                            <h3 class="text-lg font-black text-gray-800 leading-tight mb-1" x-text="user.name"></h3>
                            <p class="text-sm font-bold text-gray-400 mb-6" x-text="user.last_name"></p>

                            <div class="space-y-4 pt-6 border-t border-gray-50">
                                <div class="flex items-center gap-3">
                                    <div class="p-2 bg-gray-50 rounded-lg text-gray-400">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
                                    </div>
                                    <span class="text-xs font-bold text-gray-600 truncate" x-text="user.email"></span>
                                </div>
                                <div class="flex items-center gap-3">
                                    <div class="p-2 bg-gray-50 rounded-lg text-gray-400">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2"/></svg>
                                    </div>
                                    <span class="text-[10px] font-mono font-bold text-gray-500" x-text="user.curp || 'SIN CURP'"></span>
                                </div>
                            </div>
                        </div>

                        <div class="px-6 py-4 bg-gray-50/50 border-t border-gray-100 flex gap-2">
                            <button @click="openPanelForEdit(user)" class="flex-1 bg-white py-2.5 rounded-2xl text-blue-600 font-black text-[10px] tracking-widest border border-gray-200 hover:bg-blue-600 hover:text-white transition-all shadow-sm">
                                EDITAR
                            </button>
                            <button @click="confirmDeleteUser(user)" class="p-2.5 bg-white rounded-2xl text-red-500 border border-gray-200 hover:bg-red-500 hover:text-white transition-all shadow-sm">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
                            </button>
                        </div>
                    </div>
                </template>
            </div>
        </div>

        <div x-show="notification.show" class="fixed bottom-8 left-1/2 -translate-x-1/2 z-[100] px-8 py-4 rounded-3xl shadow-2xl text-white font-black text-xs tracking-widest flex items-center gap-4 transition-all"
             :class="notification.type === 'success' ? 'bg-green-600' : 'bg-red-600'" x-transition>
            <div class="bg-white/20 p-2 rounded-xl"><svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M5 13l4 4L19 7"/></svg></div>
            <span x-text="notification.message.toUpperCase()"></span>
        </div>

        </div>

    <script is:inline define:vars={{ usersJSON, API_BASE_URL }}>
        document.addEventListener('alpine:init', () => {
            Alpine.data('userManagement', (initialUsers, baseUrl) => ({
                users: initialUsers,
                apiBaseUrl: baseUrl,
                searchQuery: '',
                notification: { show: false, message: '', type: 'success' },
                isPanelOpen: false,
                isEditing: false,
                isSaving: false,
                newUser: { address: ['', '', ''] },

                // Lógica de filtrado dinámico
                filteredUsers() {
                    if (!this.searchQuery) return this.users;
                    const q = this.searchQuery.toLowerCase();
                    return this.users.filter(u => 
                        (u.name + ' ' + u.last_name).toLowerCase().includes(q) || 
                        u.email.toLowerCase().includes(q) ||
                        (u.curp && u.curp.toLowerCase().includes(q))
                    );
                },

                // LÓGICA DE API CON HEADERS (Lo que vimos en tu captura)
                async saveUser() {
                    this.isSaving = true;
                    try {
                        const method = this.isEditing ? 'PUT' : 'POST';
                        const url = this.isEditing ? `${this.apiBaseUrl}/users/${this.newUser.id}` : `${this.apiBaseUrl}/users`;

                        const response = await fetch(url, {
                            method,
                            headers: { 
                                'Content-Type': 'application/json',
                                'X-User-Role': 'admin', // Header requerido por tu API
                                'X-User-Permission': 'view.student' // Header requerido por tu API
                            },
                            body: JSON.stringify(this.newUser)
                        });

                        const result = await response.json();
                        if (response.ok) {
                            // Tu lógica original de actualizar la lista...
                            this.showNotify('Operación exitosa');
                            this.isPanelOpen = false;
                            // Recargar datos si es necesario
                        }
                    } catch (e) {
                        this.showNotify('Error de conexión', 'error');
                    } finally {
                        this.isSaving = false;
                    }
                },

                // ... Resto de tus funciones originales ...
                showNotify(msg, type = 'success') {
                    this.notification = { show: true, message: msg, type };
                    setTimeout(() => this.notification.show = false, 3000);
                }
            }));
        });
    </script>
</Layout>