              btn.classList.remove('text-gray-700', 'border', 'border-gray-300', 'hover:bg-gray-100');
          } else {
              btn.classList.add('text-gray-700', 'border', 'border-gray-300', 'hover:bg-gray-100');
              btn.addEventListener('click', () => {
