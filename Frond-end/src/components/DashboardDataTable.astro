---
// Define las propiedades (props) que espera el componente.
interface Props {
    chartData: {
        labels: string[];
        ganancias: number[];
        estudiantes: number[];
    };
    totalRecaudado: number;
    totalPendiente: number;
    totalGeneral: number;
    formatCurrency: (value: number | string) => string;
}

const { 
    chartData, 
    totalRecaudado, 
    totalPendiente, 
    totalGeneral, 
    formatCurrency 
} = Astro.props;

// Calculamos los porcentajes
const porcentajeRecaudado = totalGeneral > 0 
    ? ((totalRecaudado / totalGeneral) * 100).toFixed(2) 
    : '0.00';
const porcentajePendiente = totalGeneral > 0 
    ? ((totalPendiente / totalGeneral) * 100).toFixed(2) 
    : '0.00';

// Prepara los datos mensuales para la iteraciÃ³n
const monthlyData = chartData.labels.map((label, index) => ({
    mes: label,
    ganancias: chartData.ganancias[index] || 0,
    estudiantes: chartData.estudiantes[index] || 0
}));
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6">
    
    <section class="bg-white p-4 md:p-6 rounded-xl shadow-md border border-gray-200">
        <h2 class="text-xl md:text-2xl font-bold text-gray-800 mb-4 border-b pb-2">
            ðŸ“ˆ EvoluciÃ³n Mensual
        </h2>
        
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
