// src/components/CardInfo.astro
const { title, value, description, icon, href } = Astro.props;

let displayValue = value || '0';

// Ajuste inicial para tarjetas de dinero
if ((icon === 'pending' || icon === 'recaudado') && !value) {
    displayValue = '$0.00';
}

const iconColors = {
    students: 'text-[#3b7666]',
    pending: 'text-red-600', 
    recaudado: 'text-blue-600',
    concepts: 'text-purple-600', 
};

const getIconSvg = (iconName, sizeClass) => {
    switch (iconName) {
        case 'students':
            return `<svg xmlns="http://www.w3.org/2000/svg" class="${sizeClass}" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" /></svg>`;
        case 'concepts':
            return `<svg xmlns="http://www.w3.org/2000/svg" class="${sizeClass}" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" /></svg>`;
        case 'pending':
            return `<svg xmlns="http://www.w3.org/2000/svg" class="${sizeClass}" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8V6m0 4v2m0 2v2m0 0V4m-7 8a7 7 0 1114 0 7 7 0 01-14 0z" /></svg>`;
        case 'recaudado':
            return `<svg xmlns="http://www.w3.org/2000/svg" class="${sizeClass}" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" /></svg>`;
        default: return '';
    }
};
---

<a href={href} class="bg-white px-4 py-3 rounded-xl border border-gray-200 shadow-lg flex flex-col items-center justify-between h-auto w-full text-center transition-all duration-200 hover:shadow-xl focus:outline-none cursor-pointer">
    <div class="flex justify-between items-start w-full mb-1">
        <h3 class="text-sm font-medium text-gray-700">{title}</h3>
        <span class="flex-shrink-0" class:list={[iconColors[icon]]} set:html={getIconSvg(icon, 'w-5 h-5')}></span>
    </div>
    
    <div class="flex flex-col items-center justify-center w-full my-2">
        <p class:list={['text-2xl md:text-3xl font-bold', iconColors[icon]]} id={`count-${icon}`}>
            {displayValue}
        </p> 
        <p class="text-xs text-gray-500 mt-1" id={`desc-${icon}`}>
           {description}
        </p> 
    </div>
</a>

<script define:vars={{ icon }}>
    const updateCard = () => {
        const elVal = document.getElementById(`count-${icon}`);
        const elDesc = document.getElementById(`desc-${icon}`);
        if (!elVal) return;

        const formatMX = (n) => new Intl.NumberFormat('es-MX', { style: 'currency', currency: 'MXN' }).format(n);

        if (icon === 'concepts') {
            const list = JSON.parse(localStorage.getItem('conceptsList') || '[]');
            elVal.textContent = String(list.length);
            if (elDesc) elDesc.textContent = list.length === 1 ? "1 Concepto" : `${list.length} Conceptos`;
        }

        if (icon === 'pending' || icon === 'recaudado') {
            const charges = JSON.parse(localStorage.getItem('chargesList') || '[]');
            if (icon === 'recaudado') {
                const paid = charges.filter(c => ['paid', 'pagado'].includes(String(c.status).toLowerCase()));
                elVal.textContent = formatMX(paid.reduce((s, c) => s + (parseFloat(c.amount) || 0), 0));
                if (elDesc) elDesc.textContent = `${paid.length} Pagos`;
            } else {
                const pending = charges.filter(c => !['paid', 'pagado'].includes(String(c.status).toLowerCase()));
                elVal.textContent = formatMX(pending.reduce((s, c) => s + (parseFloat(c.amount) || 0), 0));
                if (elDesc) elDesc.textContent = `${pending.length} Adeudos`;
            }
        }

        if (icon === 'students') {
            const students = JSON.parse(localStorage.getItem('studentsList') || '[]');
            elVal.textContent = String(students.length);
            const hoy = new Date();
            if (elDesc) elDesc.textContent = hoy.toLocaleDateString('es-MX');
        }
    };

    updateCard();
    window.addEventListener('storage', updateCard);
    window.addEventListener('conceptsUpdated', updateCard);
    window.addEventListener('chargesUpdated', updateCard);
</script>